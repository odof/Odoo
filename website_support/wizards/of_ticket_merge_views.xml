<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="of_website_support_ticket_merge_view_form" model="ir.ui.view">
        <field name="name">of.website.support.ticket.merge.form.view</field>
        <field name="model">of.website.support.ticket.merge</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id" invisible="False"/>
                </group>
                <div attrs="{'invisible': [('partner_id', '=', False)]}">
                    Les tickets sélectionnés seront fusionnés.
                </div>
                <div attrs="{'invisible': [('partner_id', '!=', False)]}">
                    Les tickets sélectionnés doivent avoir le même partenaire associé.
                </div>
                <footer>
                    <button name="action_confirm" string="Valider" type="object" class="btn-primary"
                            attrs="{'invisible': [('partner_id', '=', False)]}"/>
                    <button string="Annuler" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window
        id="action_of_website_support_ticket_merge"
        name="Fusionner les tickets"
        res_model="of.website.support.ticket.merge"
        src_model="website.support.ticket"
        target="new"
        view_type="form"
        view_mode="form"
        multi="True"
    />

</odoo>
